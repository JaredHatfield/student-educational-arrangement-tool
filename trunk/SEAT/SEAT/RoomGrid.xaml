<Window x:Class="SEAT.RoomGrid"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="Room Grid" Height="500" Width="900">
    <Window.Resources>
        <DataTemplate x:Key="itemTemplateStudents">
            <DockPanel Width="200">
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="{Binding Path=LastName}"/>
                    <TextBlock Text=", "/>
                    <TextBlock Text="{Binding Path=FirstName}"/>
                </StackPanel>
                <CheckBox IsChecked="{Binding Path=VisionImpairment}" IsEnabled="False" Margin="0,0,10,0" DockPanel.Dock="Right" HorizontalAlignment="Right" />
                <CheckBox IsChecked="{Binding Path=LeftHanded}" IsEnabled="False" Margin="0,0,10,0" DockPanel.Dock="Right" HorizontalAlignment="Right" />
            </DockPanel>
        </DataTemplate>
    </Window.Resources>
    <DockPanel Name="dkpanel" Height="auto" Width="auto">
        <Menu DockPanel.Dock="Top" Width="auto">
            <MenuItem Header="_File">
                <MenuItem Header="_Save Template" Name="FileMenuSave" Click="FileMenuSave_Click" InputGestureText="Ctrl+S" />
                <MenuItem Header="_Print Classroom" Name="PrintClassroom" Click="PrintClassroom_Click" InputGestureText="Ctrl+P" />
            </MenuItem>
            <MenuItem Header="_Reserve Seats">
                <MenuItem Header="_Clear" Click="ReservationClear_Click"/>
                <MenuItem Header="_Checkerboard" Click="ReservationCheckerboard_Click" />
                <MenuItem Header="_Every Other Row" Click="ReservationEveryOtherRow_Click" />
                <MenuItem Header="_Every Other Column" Click="ReservationEveryOtherColumn_Click" />
                <MenuItem Header="_Left Side of Room" Click="ReservationLeft_Click" />
                <MenuItem Header="_Right Side of Room" Click="ReservationRight_Click" />
                <MenuItem Header="_Back of Room" Click="ReservationBack_Click" />
            </MenuItem>
            <MenuItem Header="_Place Students">
                <MenuItem Header="_Clear Seats" Name="algorithmClearSeats" Click="AlgorithmClearSeats_Click" />
                <MenuItem Header="_Best Effort" Name="algorithmBestEffort" Click="AlgorithmBestEffort_Click" />
                <MenuItem Header="_Visualy Impaired Only" Name="algorithmVisuallyImpaired" Click="AlgorithmVisuallyImpaired_Click" />
                <MenuItem Header="_Left Handed Only" Name="algorithmLeftHanded" Click="AlgorithmLeftHanded_Click" />
            </MenuItem>
        </Menu>
        <Grid Name="Options" Width="200" Height="Auto" Margin="10,0,10,10" DockPanel.Dock="Right">
            <DockPanel>
                <Button DockPanel.Dock="Bottom" Height="23" Name="btndone" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="ButtonDone_Click">Done</Button>
                <StackPanel DockPanel.Dock="Top">
                    <Label Height="35" Name="lblTitle" Width="120" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="12">Seat Properties</Label>
                    <DockPanel Height="35">
                        <Label Height="28" Name="lblNumber" DockPanel.Dock="Left" VerticalAlignment="Top" HorizontalAlignment="Left" Width="62" FontSize="10">Number:</Label>
                        <TextBox Height="23" Name="txtnumber" DockPanel.Dock="Right" HorizontalAlignment="Stretch" VerticalAlignment="Top" FontSize="10" />
                    </DockPanel>
                    <Button Height="23" Name="btnnumber" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="ButtonNumber_Click">Change Number</Button>
                    <DockPanel Height="35">
                        <RadioButton Height="16"  Name="rbtnLeftH" VerticalAlignment="Center" HorizontalAlignment="Left" Width="74" FontSize="10" GroupName="grpHand">Left Handed</RadioButton>
                        <RadioButton Height="16"  Name="rbtnRightH" VerticalAlignment="Center" FontSize="10" GroupName="grpHand" IsChecked="True">Right Handed</RadioButton>
                    </DockPanel>
                    <Button Height="23" Name="btnhanded" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="ButtonHanded_Click">Change Handed</Button>
                    <DockPanel Height="35">
                        <RadioButton Height="16"  Name="rbtnLeft" VerticalAlignment="Center" HorizontalAlignment="Left" Width="72" FontSize="10" GroupName="grpLMR">Left</RadioButton>
                        <RadioButton Height="16"  Name="rbtnMiddleLR" VerticalAlignment="Center" FontSize="10" GroupName="grpLMR" Width="72" IsChecked="True">Middle</RadioButton>
                        <RadioButton Height="16" HorizontalAlignment="Left"  Name="rbtnRight" VerticalAlignment="Center" Width="46" FontSize="10" GroupName="grpLMR">Right</RadioButton>
                    </DockPanel>
                    <Button Height="23" Name="btnhoriz" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="ButtonHorizontal_Click">Change Horizontal Alignment</Button>
                    <DockPanel Height="35">
                        <RadioButton FontSize="10" Height="16" HorizontalAlignment="Left"  Name="rbtnFront" VerticalAlignment="Center" Width="72" GroupName="grpFMB">Front</RadioButton>
                        <RadioButton FontSize="10" Height="16"  Name="rbtnMiddleFB" VerticalAlignment="Center" GroupName="grpFMB" Width="72" IsChecked="True">Middle</RadioButton>
                        <RadioButton FontSize="10" Height="16" HorizontalAlignment="Left"  Name="rbtnBack" VerticalAlignment="Center" Width="46" GroupName="grpFMB">Back</RadioButton>
                    </DockPanel>
                    <Button Height="23" Name="btnvert" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="ButtonVertical_Click">Change Vertical Alignment</Button>
                    <CheckBox Height="35"  Name="chkboxNotSeat" VerticalAlignment="Center">Not A Seat</CheckBox>
                    <CheckBox  Name="chkboxEmpty" Height="35" VerticalAlignment="Center">Leave Empty</CheckBox>
                    <Button Height="23" Name="btnchange" HorizontalAlignment="Stretch" VerticalAlignment="Center" Click="ButtonChange_Click">Change Seat and Empty</Button>
                </StackPanel>
            </DockPanel>
        </Grid>
        <StackPanel Orientation="Horizontal" DockPanel.Dock="top">
            <Label Name="lblnm">Name:</Label>
            <TextBox Width="125"  Name="txtnm" TextChanged="TextBoxName_TextChanged"></TextBox>
            <Label Name="lblloc">Location:</Label>
            <TextBox Width="125" Name="txtloc" TextChanged="TextBoxLocation_TextChanged"></TextBox>           
            <Label Name="lbldes">Description:</Label>
            <TextBox Width="250" Name="txtdes" TextChanged="TextBoxDescription_TextChanged"></TextBox>
        </StackPanel>
        <DockPanel DockPanel.Dock="Top" Name="dpnlgrid" Width="auto">
            <Grid Name="grdtop" Width="auto" Height="auto" DockPanel.Dock="Top">
                <ScrollViewer Margin="90,0,0,0" Name="svrtop" Width="auto" Height="auto" VerticalScrollBarVisibility="Hidden" DockPanel.Dock="Top" HorizontalScrollBarVisibility="Hidden">
                    <Grid Name="grdtop2" Width="auto" Height="auto" HorizontalAlignment="Left"></Grid>
                </ScrollViewer>
            </Grid>
            <ScrollViewer Name="svrleft" HorizontalScrollBarVisibility="Disabled" DockPanel.Dock="Left" Width="auto" Height="auto" MaxWidth="90" VerticalScrollBarVisibility="Hidden">
                <Grid Name="grdleft" Width="auto" Height="auto" HorizontalAlignment="Left"></Grid>
            </ScrollViewer>
            <DockPanel Width="250" Name="dockPanelStudents">
                <TextBox Name="textBoxFilterStudents" DockPanel.Dock="Top" TextChanged="TextBoxFilterStudents_TextChanged" />
                <DockPanel DockPanel.Dock="Top" Width="Auto">
                    <Label Margin="0,0,113,0" FontWeight="Black">Name</Label>
                    <Label Margin="0,0,7,0" FontWeight="Black">L</Label>
                    <Label Margin="0,0,10,0" FontWeight="Black">V</Label>
                </DockPanel>
                <CheckBox Name="checkBoxFilterSeatedStudents" Margin="5,5,0,5" DockPanel.Dock="Bottom" Checked="CheckBoxFilterSeatedStudents_Checked" Unchecked="CheckBoxFilterSeatedStudents_Unchecked">Show Only Seated Students</CheckBox>
                <ListBox Name="students" Width="auto" ItemTemplate="{StaticResource itemTemplateStudents}"></ListBox>
            </DockPanel>
            <ScrollViewer Name="svrgrid" HorizontalScrollBarVisibility="Auto" DockPanel.Dock="Right" Width="auto" Height="auto" VerticalScrollBarVisibility="Auto">
                <Grid Name="griddy" Width="auto" Height="auto" HorizontalAlignment="Left">
                </Grid>
            </ScrollViewer>            
        </DockPanel>
    </DockPanel>
</Window>
