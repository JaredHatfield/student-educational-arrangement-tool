<UserControl x:Class="SEAT.Seat"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="60" Width="45" HorizontalContentAlignment="Left" VerticalContentAlignment="Top" VerticalAlignment="Top" HorizontalAlignment="Left" Focusable="False" BorderBrush="Black" BorderThickness="1">
    <Grid Height="auto" Width="auto" VerticalAlignment="Top" HorizontalAlignment="Left">
        <Grid.RowDefinitions>
            <RowDefinition Height="14" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="44" />
        </Grid.ColumnDefinitions>
        <Label Grid.Row="0" Height="14" Width="auto" Name="lblName" FontSize="8" VerticalAlignment="Top" HorizontalAlignment="Left" Padding="0" Foreground="Black">Name</Label>
        <Grid Grid.Row="1" Name="grdSelect" Height="44" Width="44" VerticalAlignment="Top" HorizontalAlignment="left">
            <CheckBox HorizontalAlignment="Left" VerticalAlignment="Top" Height="15" Margin="15,15,0,0" Width="auto" Name="chkSelected" FontSize="8" Padding="0" FlowDirection="LeftToRight" OverridesDefaultStyle="False" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></CheckBox>
        </Grid>
    </Grid>
</UserControl>
